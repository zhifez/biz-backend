{{#unless user}}
<div class="container">
	<div class="text-center mt-3">
		<h5 style="font-size: 17px;">You're not logged in.</h5>
		<button class="btn btn-warning btn-sm mt-1" onclick="goto('/signin');">
			Log in
		</button>
		<hr>
	</div>
</div>
{{/unless}}

<div class="mb-3">
	{{> searchHeader this}}
</div>

{{#ifMoreThan count 0}}
<div class="container">
	<div class="row">
		{{#each campaigns}}
		{{#unless campaignProgress.completed}}
		<div class="col-sm-8 col-md-4 col-lg-4 mb-3">
			{{> campaignCardLarge this}}
		</div>
		{{/unless}}
		{{/each}}
	</div>
	

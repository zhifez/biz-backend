<script src="../js/campaign-statistics.js"></script>

<div class="m-3">
	<a href="/campaign/{{campaignId}}"><i class="fas fa-arrow-left"></i> Back to campaign</a>
	
	<h5 class="mt-3 mb-3 align-items-center"><i class="fas fa-chart-bar"></i> Campaign Statistics <span class="text-danger m-0" style="font-size: 12px;">BETA</span></h5>
	
	<div class="row text-info">
		<div class="col-4 text-center">
			<h3 class="m-0" style="font-size: 25px;">{{progress.percentage}}%</h3>
			<span style="font-size: 13px;">completion</span>
		</div>

		<div class="col-4 text-center">
			<h3 class="m-0" style="font-size: 25px;">{{progress.shares}}</h3>
			<span style="font-size: 13px;">total {{#setSingularPluralNoValue progress.shares "share"}}{{/setSingularPluralNoValue}}</span>
		</div>

		<div class="col-4 text-center">
			{{#ifMoreThan progress.expiry 0}}
			<h3 class="m-0" style="font-size: 25px;">{{progress.expiry}}</h3>
			<span style="font-size: 13px;">{{#setSingularPluralNoValue progress.expiry "day"}}{{/setSingularPluralNoValue}} left</span>
			{{/ifMoreThan}}
		</div>
	</div>

	<input id="campaignId" class="hidden" type="text" value="{{campaignId}}">
	<hr>
	<div class="d-flex justify-content-between align-items-center mb-2">
		<button id="daBtn_prev" onclick="onDailyActivityPrev()" class="btn btn-primary btn-sm p-0 pl-2 pr-2">Prev</button>
			
		<h5 id="daTitle" class="m-0 text-center" style="font-size: 15px;"></h5>

		<button id="daBtn_next" onclick="onDailyActivityNext()" class="btn btn-primary btn-sm p-0 pl-2 pr-2">Next</button>
		{{!-- <span>
			<button id="daBtn_prev" onclick="onDailyActivityPrev()" class="btn btn-primary btn-sm p-0 pl-2 pr-2">Prev</button>
			<button id="daBtn_next" onclick="onDailyActivityNext()" class="btn btn-primary btn-sm p-0 pl-2 pr-2">Next</button>
		</span> --}}
	</div>
	<canvas id="chart_dailyActivity" width="10" height="7"></canvas>
	<hr>
	<h5 class="m-0 mb-2 text-center" style="font-size: 15px;">Overall Sharing (3-hour Period)</h5>
	<canvas id="chart_sharePeriod" width="10" height="7"></canvas>
	<hr>
	<h5 class="m-0 mb-2 text-center" style="font-size: 15px;">Top Sharing (Country)</h5>
	<canvas id="chart_topShareCountry" width="10" height="10"></canvas>
	<hr>
	<h5 class="m-0 mb-2 text-center" style="font-size: 15px;">Top Views (Social Media)</h5>
	<canvas id="chart_topViewsSocialMedia" width="10" height="10"></canvas>
	<hr>
	<h5 class="m-0 mb-2 text-center" style="font-size: 15px;">Top Views (Country)</h5>
	<canvas id="chart_topViewsCountry" width="10" height="10"></canvas>
</div>
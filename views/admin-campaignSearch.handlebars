<script src="../js/admin-campaignSearch.js"></script>

<div class="m-3">
	<div class="d-flex justify-content-between align-items-center">
		<input id="search-edit" type="text" class="form-control mr-2" placeholder="Search in Campaigns">
		<button class="btn btn-success" onclick="onCampaignSearch()">Search</button>
	</div>
	{{#if keyword}}
	<hr>
	<p class="text-muted m-0">{{#setSingularPlural campaigns.length "result"}}{{/setSingularPlural}} found for '{{keyword}}'</p>
	{{/if}}
	<hr>
	<div class="row">
		{{#each campaigns}}
		<div class="col-md-3 mb-3" style="position: relative;">
			{{> campaignCardSimple this}}

			<button class="btn btn-danger btn-sm" onclick={{#genFunc "onCampaignDelete" _id}}{{/genFunc}} style="position: absolute; top: 15px; right: 30px; z-index: 10;"><i class="fas fa-trash"></i></button>
			<button class="btn btn-primary btn-sm" onclick="goto('/statistics/{{_id}}')" style="position: absolute; top: 15px; right: 65px; z-index: 10;"><i class="fas fa-chart-bar"></i></button>
		</div>
		{{/each}}
	</div>
</div>
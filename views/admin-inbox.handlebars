<script src="../js/admin-inbox.js"></script>

<div class="m-3">
	<div class="row">
		<div class="col-4 col-md-3">
			<button class="btn btn-success mb-2 btn-block" onclick="onMessageNew()">Create New</button>
			<div class="list-group">
				{{#each messages}}
				<a id={{#genId "message" _id}}{{/genId}} onclick={{#genFunc "onMessageSelect" _id}}{{/genFunc}} class="list-group-item list-group-item-action">{{messageTitle}}</a>
				{{/each}}
			</div>
		</div>

		<div class="col-8 col-md-9">
			<div class="d-flex justify-content-between align-items-center">
				<p id="messageRecipient"></p>
				<p id="messageCreated"></p>
			</div>
			
			<h5 id="messageTitle">Title</h5>
			<p id="messageContent">Content</p>
			<hr>
			<button class="btn btn-danger" onclick="onMessageDelete()">Delete</button>
		</div>
	</div>
</div>
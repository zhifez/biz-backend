<script src="../js/admin-category.js"></script>

<div class="m-3">
	<div class="d-flex justify-content-between align-items-center">
		<input id="new-category" type="text" class="form-control mr-2" placeholder="New Category">
		<button class="btn btn-success" onclick="onCategoryAdd()">Add Category</button>
	</div>
	<hr>
	<div id="categoryList" class="row">
		{{#each categories}}
		<div id={{#genId "category" _id }}{{/genId}} class="col-sm-4 col-md-3 mb-2 {{#ifEqual _id 'empty'}}hidden{{/ifEqual}}">
			<div class="card">
				<div class="card-body">
					<h5 id="category-name" style="font-size: 15px;">{{categoryName}}</h5>
					<input id="category-name-edit" class="form-control mb-3 p-1 pl-2 pr-2" type="text" placeholder="{{categoryName}}" style="font-size: 13px;">

					<div class="d-flex justify-content-between align-items-center">
						<button id="category-update" class="btn btn-primary btn-sm" onclick={{#genFunc "onCategoryUpdate" _id}}{{/genFunc}}>Update</button>
						<button id="category-delete" class="btn btn-danger btn-sm" onclick={{#genFunc "onCategoryDelete" _id}}{{/genFunc}}>Delete</button>
					</div>
				</div>
			</div>
		</div>
		{{/each}}
	</div>
</div>